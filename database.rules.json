{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "canvases": {
      "$canvasId": {
        "metadata": {
          ".validate": "newData.hasChildren(['name', 'createdAt', 'createdBy'])",
          "name": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "createdAt": {
            ".validate": "newData.isNumber()"
          },
          "createdBy": {
            ".validate": "newData.isString()"
          }
        },
        "objects": {
          "$objectId": {
            ".validate": "newData.hasChildren(['id', 'x', 'y', 'width', 'height', 'color', 'createdBy', 'timestamp'])",
            "id": {
              ".validate": "newData.isString() && newData.val() === $objectId"
            },
            "x": {
              ".validate": "newData.isNumber()"
            },
            "y": {
              ".validate": "newData.isNumber()"
            },
            "width": {
              ".validate": "newData.isNumber() && newData.val() > 0"
            },
            "height": {
              ".validate": "newData.isNumber() && newData.val() > 0"
            },
            "color": {
              ".validate": "newData.isString()"
            },
            "createdBy": {
              ".validate": "newData.isString()"
            },
            "timestamp": {
              ".validate": "newData.isNumber()"
            }
          }
        }
      }
    },

    "presence": {
      "$canvasId": {
        "$userId": {
          ".write": "$userId === auth.uid",
          "name": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "online": {
            ".validate": "newData.isBoolean()"
          },
          "cursor": {
            "x": {
              ".validate": "newData.isNumber()"
            },
            "y": {
              ".validate": "newData.isNumber()"
            }
          },
          "transforms": {
            "$objectId": {
              ".validate": "newData.hasChildren(['objectId','x','y','width','height','lastUpdated'])",
              "objectId": {
                ".validate": "newData.isString() && newData.val() === $objectId"
              },
              "x": { ".validate": "newData.isNumber()" },
              "y": { ".validate": "newData.isNumber()" },
              "width": {
                ".validate": "newData.isNumber() && newData.val() >= 0"
              },
              "height": {
                ".validate": "newData.isNumber() && newData.val() >= 0"
              },
              "rotation": {
                ".validate": "newData.isNumber() || !newData.exists()"
              },
              "color": {
                ".validate": "newData.isString() || !newData.exists()"
              },
              "stroke": {
                ".validate": "newData.isString() || !newData.exists()"
              },
              "strokeWidth": {
                ".validate": "newData.isNumber() || !newData.exists()"
              },
              "opacity": {
                ".validate": "newData.isNumber() || !newData.exists()"
              },
              "zIndex": {
                ".validate": "newData.isNumber() || !newData.exists()"
              },
              "lastUpdated": { ".validate": "newData.isNumber()" }
            }
          },
          "lastSeen": {
            ".validate": "newData.isNumber()"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },

    "users": {
      "$userId": {
        ".validate": "newData.hasChildren(['name', 'email'])",
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$/i)"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}
